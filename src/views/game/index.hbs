<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<script>
    function reiniciarPantalla() {
        location.reload(); // recarga la p√°gina
    }

</script>

<body onload="musica()">
    <div class="offcanvas-wrapper">
        {{> offcanvas }}
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 mb-4">
                <h1 class="text-center">PLATFORM BRAWLERS</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-9">
                <div id="canvas-wrap">
                    <canvas id="healthbar"></canvas>
                    <div class="h1" id="timer">60</div>
                    <canvas id="healthbar2"></canvas>
                    <canvas id="game"></canvas>
                    <div id="winner" class="text-center">
                        <div class="h1" style="font-size:70px;  background: linear-gradient(to bottom,  #9a0101 10%,#FF8000 100%);
                        -webkit-background-clip: text;
                        -webkit-text-fill-color: transparent;
                        background-clip: text;
                        -webkit-text-stroke: 1px rgb(0, 0, 0);" id="win"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center align-items-center mt-3">
            <button class="reiniciar col-md-8" id="reiniciarPartida" onClick="reiniciarPantalla()">REINICIAR
                PARTIDA</button>
        </div>
    </div>










</body>

<script src="dist/bundle.js"></script>
<script src="/js/clases.js"></script>
<script src="/js/objects.js"></script>
<script src="/js/main.js"></script>

</html>
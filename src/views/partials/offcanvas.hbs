<style>
  .btn {
    color: aliceblue;
    font-family: "pixel";
  }

  .text-white {
    color: aliceblue;
    font-family: "pixel";
    background-color: aliceblue;
  }

  .offcanvas-header {
    align-items: right;
    text-align: right;
  }

.offcanvas-body {
  overflow-y: hidden !important;
}
  .offcanvas {
    color: rgb(255, 255, 255);
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    width: 100vw;
    height: 100vh;
    background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.6)), url(/img/pixelart.png);
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    gap: 60px;
  }
</style>

<button class="btn col-md-1" type="button" data-bs-toggle="offcanvas" data-bs-target="#staticBackdrop"
  aria-controls="staticBackdrop">
  <img src="../img/ajustes.png" alt="Imagen de menú">
</button>

<div class="offcanvas offcanvas-start" tabindex="-1" id="staticBackdrop" aria-labelledby="staticBackdropLabel" data-bs-scroll="false">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="staticBackdropLabel"></h5>
    <button type="button" class="btn-close btn-close-white p-4" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <a class="btn" type="button" href="/logout">
      <h3>LOGOUT</h3>
    </a><br>
    <a class="btn" type="button" href="/menu">
      <h3>BACK TO MENU</h3>
    </a><br>
    <button class="btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#musicOffcanvas">
      <h3>MUSIC</h3>
    </button>
  </div>
</div>

<div class="offcanvas offcanvas-start" tabindex="-1" id="musicOffcanvas" data-bs-parent="#staticBackdrop" aria-labelledby="musicOffcanvasLabel" data-bs-scroll="false">

  <div class="offcanvas-header">
    <h3 class="offcanvas-title col-md-10 " id="musicOffcanvasLabel">MUSIC SETTINGS</h3>
    <button type="button" class="btn-close btn-close-white p-4" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
 <h3 class="col-md-12">ON/OFF MUSIC:</h3>
    <button class="col-md-12 justify-content-center" style="background-color:transparent; border: transparent;" onClick="toggleMusic()">
      <img id="musicIcon" src="./img/altavoz.png" alt="Icono de música activada">
    </button>

    <h3 class="col-md-12">VOLUME:</h3>
    <input id="volumeRange" type="range" max="1" min="0" step="0.1" class="col-md-12 volumenTotal"
      onchange="cambiarVolumen(this.value)">
  </div>
</div>
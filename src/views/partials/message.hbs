   {{#if message}}
        <div class="container">
            <div class="row">
                <div class="col-me-4 mx-auto" >
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{message}}
                        <button type="button" class="clsoe" data-dismiss="alert" aria-label="Close">

                        </button>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
    
    {{#if success}}
        <div class="container">
            <div class="row">
                <div class="col-me-4 mx-auto" >
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{success}}
                        <button type="button" class="clsoe" data-dismiss="alert" aria-label="Close"> 
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}